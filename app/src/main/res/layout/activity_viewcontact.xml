<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/mobilefiled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mobileview"
            android:layout_alignStart="@+id/mobileview"
            android:layout_below="@+id/mobileview"
            android:text="mobile" />

        <TextView
            android:id="@+id/mobileview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(650)555-1234"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_alignTop="@+id/mobileicon"
            android:layout_toRightOf="@+id/contactprofileImage"
            android:layout_toEndOf="@+id/contactprofileImage" />

        <TextView
            android:id="@+id/emailfiled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/emailview"
            android:layout_alignStart="@+id/emailview"
            android:text="Email"
            android:layout_below="@+id/emailview" />


        <TextView
            android:id="@+id/emailview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mobilefiled"
            android:layout_alignStart="@+id/mobilefiled"
            android:layout_below="@+id/mobileicon"
            android:layout_marginTop="23dp"
            android:text="ahamdomar@gmail.com"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/profilesep"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/emailfiled"
            android:layout_marginTop="40dp"
            android:background="#000"
            android:gravity="center_horizontal"
            android:paddingTop="5dip" />

        <TextView
            android:id="@+id/fullnameview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/contactprofileImage"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/contactprofileImage"
            android:layout_toRightOf="@+id/contactprofileImage"
            android:text="\@AhmadOmar95"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/usernameview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/usericon"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/usericon"
            android:layout_toRightOf="@+id/usericon"
            android:text="\@AhmadOmar95"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/DeleteFirend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Friend"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_alignBaseline="@+id/detebutton"
            android:layout_alignBottom="@+id/detebutton"
            android:layout_toRightOf="@+id/contactprofileImage"
            android:layout_toEndOf="@+id/contactprofileImage" />

        <ImageView
            android:id="@+id/mobileicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/usericon"
            android:layout_alignStart="@+id/usericon"
            android:layout_below="@+id/usericon"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/ic_call_black_24dp" />

        <ImageView
            android:id="@+id/emailicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/mobileicon"
            android:layout_alignStart="@+id/mobileicon"
            android:layout_alignTop="@+id/emailview"
            app:srcCompat="@drawable/ic_email_black_24dp" />

        <ImageView
            android:id="@+id/usericon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/contactprofileImage"
            android:layout_alignStart="@+id/contactprofileImage"
            android:layout_below="@+id/contactprofileImage"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/ic_profile" />

        <Button
            android:id="@+id/detebutton"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/emailicon"
            android:layout_alignStart="@+id/emailicon"
            android:layout_below="@+id/profilesep"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_delete_forever_black_24dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contactprofileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/profile" />


    </RelativeLayout>
</LinearLayout>